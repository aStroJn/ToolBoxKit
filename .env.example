# Environment Variables for ToolBoxKit
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment

# Application Environment
VITE_APP_ENV=development

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3001

# Gotenberg Configuration (for document and image conversion)
VITE_GOTENBERG_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# FFmpeg Configuration
VITE_FFMPEG_CDN_URL=https://unpkg.com/@ffmpeg/core@0.12.6/dist/esm

# Build Configuration
VITE_BUILD_COMPRESS=true
VITE_BUILD_SOURCEMAP=false
