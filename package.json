{
  "name": "my-toolbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:prod": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "preview:prod": "vite preview --port 4173",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:ci": "npm run test:coverage && npm run lint",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "clean": "rm -rf dist node_modules/.vite",
    "docker:build": "docker build -t toolboxkit:latest .",
    "docker:run": "docker run -p 80:80 toolboxkit:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:static": "npm run build && npx surge dist/ toolboxkit.surge.sh",
    "postbuild": "npm run sitemap",
    "sitemap": "node scripts/generate-sitemap.js",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "performance:lighthouse": "npx lighthouse http://localhost:4173 --output=json --output-path=./reports/lighthouse.json",
    "ci": "npm run type-check && npm run lint && npm run test:ci",
    "precommit": "lint-staged",
    "release": "npm run ci && npm version patch && npm publish",
    "release:minor": "npm run ci && npm version minor && npm publish",
    "release:major": "npm run ci && npm version major && npm publish"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "vite": "^7.1.2",
    "vitest": "^4.0.9"
  }
}
